<%- include('partials/header'); -%>

   <div class="write-post-description">
    <h1 class="write-post-title">Write a Post</h1>
    <p class="write-post-directions">Please, fill out the form below and press the SUBMIT button.</p>
   </div>
   
   <div class="container post-form">
    <div class="card">
        <div class="card-body">
          <form action="/posts" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label for="post-title" class="form-label">Post Ttle</label>
                <input type="text" class="form-control" id="post-title" name="postTitle" placeholder="Post Title">
            </div>
            <div class="mb-3">
                <label for="post-content" class="form-label">Your Post</label>
                <textarea class="form-control" id="post-content" name="postContent" rows="5"></textarea>
            </div>
            <button class="btn btn-primary post-btn" type="submit">Submit</button>
          </form>
        </div>
    </div>
   </div>

<%- include('partials/footer'); -%>