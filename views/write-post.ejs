<%- include('partials/header'); -%>

   <div class="write-post-description">
    <h1 class="write-post-title">Write a Post</h1>
    <p class="write-post-directions">Please, fill out the form below and press the SUBMIT button.</p>
   </div>
   
   <div class="container post-form">
    <div class="card">
        <div class="card-body">
          <form action="/write-post" method="post">
            <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Full Name">
            </div>
            <div class="mb-3">
                <label for="post-title" class="form-label">Post Title</label>
                <input type="text" class="form-control" id="post-title" name="postTitle" placeholder="Post Title">
            </div>
            <div class="mb-3">
                <label for="post-content" class="form-label">Your Post</label>
                <textarea class="form-control" id="post-content" name="postContent" placeholder="Your Post" rows="5"></textarea>
            </div>
            <button class="btn btn-primary post-btn" type="submit">Submit</button>
          </form>
        </div>
    </div>
   </div>

<%- include('partials/footer'); -%>